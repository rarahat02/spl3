<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/ascent_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueButtonStyle" parent="WhiteButtonStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/ascent_color</item>
    </style>

</resources>
